<% include ../Metadata/header %>
<div class="ui inverted segment">
	<div class="ui centered grid">
		<div class="four column row heading">
			<div class="column"> Sr no.</div>
			<div class="column"> Full Name</div>
			<div class="column"> Mobile Number</div>
			<div class="column"> Due Amount</div>
		</div>
	<%var total=0,i=1;%>
	<%users.forEach(function(user){%>
		<%if(user.role!="admin"){%>
		<div class="four column row data">
			<div class="column"><a href='/showall/<%=user.id%>' > <%=i%></a></div>
			<div class="column"><a href='/showall/<%=user.id%>' > <%=formatTitle.capWords(user.name)%></a></div>
			<div class="column"><a href='/showall/<%=user.id%>' > <%=user.username%></a></div>
			<div class="column"><a href='/showall/<%=user.id%>' > <%=user.total%></a></div>
		</div>
		<% total+=user.total;i+=1;}%>
	<%})%>
	<div class="row">
		<div class="eight wide column">Total Due Amount : </div>
		<div class="eight wide column"><%=total%> </div>
	</div>
	</div>
</div>
<% include ../Metadata/footer %>
